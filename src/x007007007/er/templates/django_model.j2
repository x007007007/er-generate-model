{%- if table_prefix %}
{%- set table_name = table_prefix + '_' + table_name %}
{%- endif %}
    class Meta:
        app_label = '{{ app_label }}'
        db_table = '{{ table_name }}'
{%- if entity.comment %}
        verbose_name = "{{ entity.comment }}"
{%- endif %}
{%- endfor %}
