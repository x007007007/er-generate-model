@startuml
entity User {
    * id : int
    username : string
    password : string
    email : string
    last_login : datetime
    is_active : boolean
}
entity Profile {
    * id : int
    user_id : int <<FK>>
    bio : string
    avatar_url : string
}
entity Post {
    * id : int
    author_id : int <<FK>>
    title : string
    content : string
    created_at : datetime
    status : string <<enum:draft,published,archived>>
}
entity Tag {
    * id : int
    name : string
}
entity PostTags {
    post_id : int <<FK>>
    tag_id : int <<FK>>
}
User ||--|| Profile : has
User ||--o{ Post : writes
Post }|--|{ Tag : tagged_with
@enduml
