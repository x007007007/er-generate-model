@startuml
entity User {
    * id : int
    username : string
    password : string
    email : string
    last_login : datetime
    is_active : boolean
}

entity Profile {
    * id : int
    user_id : int <<FK>>
    bio : string
    avatar_url : string
}

entity Post {
    * id : int
    author_id : int <<FK>>
    title : string
    content : string
    created_at : datetime
    status : string <<enum:draft,published,archived>>
}

entity Tag {
    * id : int
    name : string
}

User -- Profile : "1:1"
User "1" -- "0..*" Post : "writes"
Post "0..*" -- "0..*" Tag : "many-to-many"
@enduml
